<resources>

    <style name="AppTheme6" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>


    <style name="MainTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">#fff</item>
        <item name="colorAccent">#fff</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/monsterrat</item>
        <item name="font">@font/monsterrat</item>
        <item name="fontFamily">@font/monsterrat</item>
        <!-- Support library compatibility -->
        <item name="background">@null</item>
    </style>

    <style name="AppTheme4" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/ThemeActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ThemeActionBar</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <!--for transparent toolbar-->
    <style name="ThemeActionBar"
        parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@null</item>
        <!-- Support library compatibility -->
        <item name="background">@null</item>
    </style>

