<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="25dp"
    android:gravity="start">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_header"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation="5dp"
        android:layout_marginVertical="30dp"
        android:src="@mipmap/ic_launcher_round"/>

    <TextView
        android:id="@+id/username_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:textSize="19sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/profile_image_header"
        android:layout_alignTop="@+id/profile_image_header"
        android:text="My Name"
        android:textColor="#fff" />

   <TextView
       android:id="@+id/phone_header"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="13sp"
       android:textColor="#fff"
       android:text="+919999999999"
       android:layout_below="@+id/username_header"
       android:layout_alignLeft="@+id/username_header"
       android:layout_marginTop="4dp"/>


</RelativeLayout>